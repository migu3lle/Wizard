<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="aau.losamigos.wizard">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AppCompat.Light.NoActionBar">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CreateGameActivity"
            android:label="@string/title_activity_create_game"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity
            android:name=".WaitForPlayersActivity"
            android:label="@string/title_activity_wait_for_players"
            android:theme="@style/AppTheme.ActionBar"/>
        <activity android:name=".LaunchGameActivity" />
        <activity
            android:name=".RulesActivity"
            android:label="@string/title_activity_rules"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity android:name=".SettingsActivity"></activity>
    </application>

</manifest>